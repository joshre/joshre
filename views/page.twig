{% extends "base.twig" %}
{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="flex flex--wrap max-wrap margin--center justify--between">
			<div class="grid--one grid--sm-four-fifths grid--md-three-fourths grid--lg-two-thirds  spacing--gutter spacing--vert-1 spacing--dsk-vert-2">
			</div><div class="grid--one grid--sm-four-fifths grid--md-three-fourths grid--lg-two-thirds bg--white spacing--gutter spacing--vert-1 spacing--dsk-vert-2">
			{{post.content}}
		</div>
	</div>
</section>
</article>
{% endblock %}